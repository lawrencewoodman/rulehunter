{
  "tags": ["test", "fred / ned"],
  "train": {
    "dataset": {
      "csv": {
        "filename": "fixtures/flow.csv",
        "hasHeader": true,
        "separator":  ","
      },
      "fields": ["group","district","height","flow"]
    },
    "when": "never"
  },
  "ruleGeneration": {
    "fields": ["group","district","height"],
    "arithmetic": true
  },

  "aggregators": [
    {
      "name": "goodFlowMcc",
      "kind": "mcc",
      "arg": "flow > 60"
    }
  ],
  "goals": ["goodFlowMcc > 0"],
  "sortOrder": [
    {
      "aggregator": "goodFlowMcc",
      "direction": "descending"
    },
    {
      "aggregator": "numMatches",
      "direction": "descending"
    }
  ]
}
